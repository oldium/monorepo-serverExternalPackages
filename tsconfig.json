{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "resolvePackageJsonExports": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "inlineSourceMap": true
  },
  "include": [
    "build.ts",
    "install.ts",
    "types/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
