{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "noEmit": false,
    "incremental": false,
    "declaration": true,
    "declarationMap": true,
    "customConditions": [
      "production"
    ]
  },
  "include": [
    "src/**/*.ts",
    "../../types/**/*.ts"
  ]
}
