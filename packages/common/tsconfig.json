{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "customConditions": [
      "development"
    ]
  },
  "include": [
    "src/**/*.ts",
    "../../types/**/*.ts"
  ]
}
